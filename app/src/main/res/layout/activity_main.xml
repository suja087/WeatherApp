<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/main2"
    tools:context="com.androquad.weatherapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#60ab0f"
        android:id="@+id/districtTv"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/topbg"
        android:alpha=".75">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/slightdrizzle"
            android:id="@+id/tempIv"
            android:layout_weight="1.3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#014193"
            android:id="@+id/temparatureTv"

            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:textSize="22sp"
            android:layout_weight="2"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1.2"
           android:orientation="vertical"
           android:layout_marginTop="10dp"
           android:gravity="right"

           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Today, March 31"
               android:id="@+id/dateTv"
               android:textSize="20sp"
               android:paddingRight="25dp"
               android:textColor="#536576" />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <ImageView
                   android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:src="@drawable/sunrise"
                   android:layout_marginTop="3dp"

                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="25sp"
                   android:id="@+id/sunriseTv"

                   android:paddingRight="25dp"
                   android:textColor="#36af1b"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <ImageView
                   android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_marginTop="3dp"
                   android:src="@drawable/sunset"
                   android:layout_marginRight="3dp"
                   android:layout_marginEnd="3dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="25sp"
                   android:id="@+id/sunsetTv"

                   android:paddingRight="25dp"
                   android:textColor="#36af1b"
                   />

           </LinearLayout>
       </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/humidity"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:id="@+id/tempTv"

            android:paddingRight="25dp"
            android:textColor="#da04430d"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wind"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:id="@+id/windTv"

            android:paddingRight="25dp"
            android:textColor="#da04430d"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pressure"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:id="@+id/pressureTv"

            android:paddingRight="25dp"
            android:textColor="#da04430d"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/humidity1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:id="@+id/humidityTv"

            android:paddingRight="25dp"
            android:textColor="#da04430d"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>

<!--
    <Button
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forecast"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal" />
-->


</LinearLayout>
